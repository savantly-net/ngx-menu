{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"stripInternal": true,
		"target": "es2015",
		"module": "CommonJs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"noEmitHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"paths": {
		  "jwt-decode/index": ["./node_modules/jwt-decode/lib/index"]
	    },
        "lib": [
		    "es2015",
			"dom"
		]
    },
    "compileOnSave": false,
	"buildOnSave": false,
	"exclude": [
    "./node_modules"
    ]
}
